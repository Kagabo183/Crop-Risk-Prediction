# Environment Variables Template
# Copy this file to .env and fill in your values

# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql://user:password@localhost:5432/crop_risk_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=crop_risk_db
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password

# ========================================
# Redis Configuration
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# JWT Authentication
# ========================================
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ========================================
# Weather Data Sources (NEW)
# ========================================

# ERA5/ECMWF Copernicus Climate Data Store
# Register at: https://cds.climate.copernicus.eu/
ERA5_API_KEY=your_copernicus_api_key_here

# NOAA Climate Data Online
# Get token at: https://www.ncdc.noaa.gov/cdo-web/token
NOAA_API_KEY=your_noaa_token_here

# IBM Environmental Intelligence Suite
# Contact: https://www.ibm.com/products/environmental-intelligence-suite
IBM_EIS_API_KEY=your_ibm_weather_api_key_here

# Local Meteorological Station API (optional)
LOCAL_STATION_URL=http://your-local-weather-station-api-url

# Generic Weather API (fallback)
WEATHER_API_KEY=your_weather_api_key_here

# ========================================
# Disease Prediction Settings (NEW)
# ========================================
DISEASE_FORECAST_DAYS=7
DISEASE_MODEL_VERSION=v1.0
ENABLE_DAILY_FORECASTS=true
ENABLE_WEEKLY_SUMMARIES=true

# ========================================
# Sentinel Satellite Data
# ========================================
SENTINEL_API_KEY=your_sentinel_api_key

# ========================================
# Email Configuration (for alerts)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# ========================================
# SMS Configuration (Africa's Talking)
# ========================================
SMS_PROVIDER=africastalking
SMS_API_KEY=your_sms_api_key
SMS_USERNAME=your_sms_username

# ========================================
# Cloud Storage (AWS S3)
# ========================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=your-s3-bucket-name

# ========================================
# Application Settings
# ========================================
DEBUG=true
API_V1_STR=/api/v1
PROJECT_NAME=Crop Risk Prediction Platform

# ========================================
# Testing & Development
# ========================================
TESTING=false
LOG_LEVEL=INFO
